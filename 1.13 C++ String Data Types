#include <iostream>
#include <string>

int main() {
    // Declare string variables
    std::string firstName = "Akash";
    std::string lastName = "Kumar";
    std::string fullName = firstName + " " + lastName;

    // Print the string variables
    std::cout << "First Name: " << firstName << std::endl;
    std::cout << "Last Name: " << lastName << std::endl;
    std::cout << "Full Name: " << fullName << std::endl;

    // Get the length of the string
    std::cout << "Length of Full Name: " << fullName.length() << std::endl;

    // Access individual characters
    std::cout << "First character of First Name: " << firstName[0] << std::endl;
    std::cout << "Last character of Last Name: " << lastName[lastName.length() - 1] << std::endl;

    // Modify a string
    fullName[0] = 'A';
    std::cout << "Modified Full Name: " << fullName << std::endl;

    return 0;
}
