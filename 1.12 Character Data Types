#include <iostream>

int main() {
    // Declare character variables
    char letter = 'A';
    char digit = '5';
    char symbol = '#';

    // Print the values of the character variables
    std::cout << "Letter: " << letter << std::endl;
    std::cout << "Digit: " << digit << std::endl;
    std::cout << "Symbol: " << symbol << std::endl;

    // Demonstrate character arithmetic
    char nextLetter = letter + 1;
    std::cout << "Next letter after " << letter << " is " << nextLetter << std::endl;

    return 0;
}
