#include <iostream>

int main() {
    // Break statement
    std::cout << "Break statement example:" << std::endl;
    for (int i = 1; i <= 10; ++i) {
        if (i == 5) {
            break; // Exit the loop when i is 5
        }
        std::cout << "i = " << i << std::endl;
    }

    // Continue statement
    std::cout << "\nContinue statement example:" << std::endl;
    for (int i = 1; i <= 10; ++i) {
        if (i == 5) {
            continue; // Skip the rest of the loop iteration when i is 5
        }
        std::cout << "i = " << i << std::endl;
    }

    return 0;
}
