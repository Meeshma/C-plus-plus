#include <iostream>
#include <string>

// Define a class
class Car {
public:
    // Member variables
    std::string brand;
    std::string model;
    int year;

    // Member function
    void displayInfo() {
        std::cout << "Brand: " << brand << std::endl;
        std::cout << "Model: " << model << std::endl;
        std::cout << "Year: " << year << std::endl;
    }
};

int main() {
    // Create an object of the Car class
    Car car1;

    // Initialize the object's member variables
    car1.brand = "Toyota";
    car1.model = "Corolla";
    car1.year = 2020;

    // Call the member function
    car1.displayInfo();

    return 0;
}
