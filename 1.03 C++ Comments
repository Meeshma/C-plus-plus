#include <iostream>

int main() {
    // This is a single-line comment
    std::cout << "Hello, World!" << std::endl; // This comment is at the end of a line

    /*
     * This is a multi-line comment.
     * It can span multiple lines.
     */
    std::cout << "This is a C++ program." << std::endl;

    return 0;
}
