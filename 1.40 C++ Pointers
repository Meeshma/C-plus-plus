#include <iostream>

int main() {
    // Declare an integer variable
    int number = 10;

    // Declare a pointer variable and assign it the address of the integer variable
    int* ptr = &number;

    // Print the value of the integer variable
    std::cout << "Value of number: " << number << std::endl;

    // Print the address of the integer variable
    std::cout << "Address of number: " << &number << std::endl;

    // Print the value of the pointer variable
    std::cout << "Value of ptr (address of number): " << ptr << std::endl;

    // Print the value pointed to by the pointer variable
    std::cout << "Value pointed to by ptr: " << *ptr << std::endl;

    // Modify the value of the integer variable using the pointer
    *ptr = 20;

    // Print the modified value of the integer variable
    std::cout << "Modified value of number: " << number << std::endl;

    return 0;
}
